{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "process",
            "command": "${env:USERPROFILE}/.vscode/extensions/mapinfo.mapbasic-0.0.9/MapBasicHelper.exe",
            "args":["${workspaceFolder}"],
            "presentation": {
                "showReuseMessage": false,
                "reveal": "silent",
                "panel": "shared"
            },            
            "problemMatcher": {
                "owner": "mapbasic",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^\\((.*):(\\d+)\\)\\s*(.*)$",
                    "file": 1,
                    "line": 2,
                    "message": 3
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}